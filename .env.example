# Database
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/portfolio_db?schema=public"

# Authentication
# Generate a secret key with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
# Google OAuth - Get credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth - Get credentials from https://github.com/settings/developers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Email Service (for verification emails)
# Using Resend - Get API key from https://resend.com/
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Blockchain Smart Contract Addresses
# Deploy the CoursePayment.sol contract to each network and add addresses here
NEXT_PUBLIC_CONTRACT_ADDRESS_MAINNET="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CONTRACT_ADDRESS_SEPOLIA="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CONTRACT_ADDRESS_POLYGON="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CONTRACT_ADDRESS_AMOY="0x0000000000000000000000000000000000000000"

# Stake-to-Learn Smart Contract Addresses
# Deploy the StakeToLearnCourse.sol contract to each network and add addresses here
NEXT_PUBLIC_STAKE_CONTRACT_ADDRESS_MAINNET="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_STAKE_CONTRACT_ADDRESS_SEPOLIA="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_STAKE_CONTRACT_ADDRESS_POLYGON="0x0000000000000000000000000000000000000000"
